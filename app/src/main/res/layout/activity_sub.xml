<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yusei.pahomqttclient.SubActivity">

    <TextView
            android:text="Topic主题"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/edt_subtopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="QoS服务质量"
            android:textColor="#000"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/QoSList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/QoS">
    </Spinner>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:text="Subscribe订阅"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"/>

        <Button
                android:text="Unsubscribe取消订阅"
                android:textColor="#000"
                android:textSize="20sp"
                android:id="@+id/btn_unsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
